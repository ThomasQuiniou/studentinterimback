    <section class="container">
        <h3 class="text-center py-3">S'inscrire</h3>
        <div class="bg-info shadow p-3 mb-5 rounded form-group row mt-sm-0 px-xs-0 py-sm-0">
            {{ form_start(registrationForm) }}
            <div class="form-group pt-5 col col-lg-6 col-md-12 mx-auto">
                {{ form_row(RegistrationForm.StudentEditType.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col col-lg-6 col-md-12 mx-auto">
                {{ form_row(RegistrationForm.StudentEditType.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col col-lg-6 col-md-12 mx-auto">
                {{ form_row(RegistrationForm.StudentEditType.phone, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col col-lg-6 col-md-12 mx-auto">
                {{ form_row(RegistrationForm.StudentEditType.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col col-lg-6 col-md-12 mx-auto">
                {{ form_row(RegistrationForm.StudentEditType.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col col-lg-6 col-md-12 mx-auto">
                {{ form_row(StudentEditType.level, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col col-lg-6 col-md-12 mx-auto">
                {{ form_row(StudentEditType.birthdate, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group pb-5 col pt-5 col-lg-6 col-md-12 mx-auto">
            <button class="btn btn-primary btn-lg w-100">{{ button_label|default('Poster') }}</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </section>