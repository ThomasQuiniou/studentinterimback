{% extends 'layout_company.html.twig' %}

{% block title %}{{ parent() }} - Devis{% endblock %}

{% block body %}
    <section class="container">
		<h3 class="text-center pt-3 my-5">Nous demander un devis</h3>

		<div class="bg-info shadow p-3 mb-5 rounded form-group row mt-sm-0 px-xs-0 py-sm-0">
			<div class="justify-content-start">
				{{ form_start(form) }}
				<div class="form-group pt-5 col col-lg-6 col-md-12 mx-auto">
					{{ form_row(form.companyName, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group col col-lg-6 col-md-12 mx-auto">
					{{ form_row(form.contactName, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group col col-lg-6 col-md-12 mx-auto">
					{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
				</div>
                <div class="form-group col col-lg-6 col-md-12 mx-auto">
					{{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group col col-lg-6 col-md-12 mx-auto">
					{{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group pb-5 col pt-3 col-lg-6 col-md-12 mx-auto">
					<input class="btn btn-primary btn-lg w-100" type="submit" value="Envoyer">
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</section>
{% endblock %}